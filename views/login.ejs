        <section class="login py-5 border-top-1">
          <div class="container">
            <div class="row justify-content-center">
              <div class="col-lg-5 col-md-8 align-item-center">
                <div class="border">
                  <h3 class="bg-gray p-4">Login Now</h3>
                  <form class="p-5 border rounded-3 bg-light" action="/login" method="POST">
                    <fieldset class="p-4">
                      <input type="text" id="email" placeholder="Email" class="border p-3 w-100 my-2" name=login_email
                        required>
                      <input type="password" id="password" placeholder="Password" class="border p-3 w-100 my-2"
                        name=login_password required>
                      <div class="loggedin-forgot">
                        <input type="checkbox" id="keep-me-logged-in">
                        <label for="keep-me-logged-in" class="pt-3 pb-2">Keep me logged in</label>
                      </div>
                      <button type="submit" id="btnLogin"
                        class="d-block py-3 px-5 bg-primary text-white border-0 rounded font-weight-bold mt-3">Log
                        in</button>
                      <a class="mt-3 d-block  text-primary" href="#">Forget Password?</a>
                      <a class="mt-3 d-inline-block text-primary" href="/register">Register Now</a>
                    </fieldset>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </section>

        <%- include('footer') %>